{
  "name": "ellert",
  "version": "0.0.1",
  "description": "Ellert is an event store for Node.js on top of Postgres",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "directories": {
    "test": "tests"
  },
  "files": [
    "dist/**/*.js",
    "dist/**/*.js.map",
    "dist/**/*.d.ts"
  ],
  "scripts": {
    "build": "tsc",
    "ci": "yarn install --frozen-lockfile",
    "prerelease": "yarn build",
    "release": "standard-version",
    "test": "npx vitest --dir tests",
    "lint-ts": "eslint --ext .ts .",
    "start": "tmuxinator",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ellert-store/ellert.git"
  },
  "keywords": [
    "postgres",
    "eventstore",
    "event-sourcing",
    "typescript"
  ],
  "author": "",
  "license": "AGPL-3.0-or-later",
  "bugs": {
    "url": "https://github.com/ellert-store/ellert/issues"
  },
  "homepage": "https://github.com/ellert-store/ellert#readme",
  "devDependencies": {
    "@commitlint/cli": "18.2.0",
    "@commitlint/config-conventional": "18.1.0",
    "@types/node": "^18.13.0",
    "@types/pg": "^8.10.2",
    "@typescript-eslint/eslint-plugin": "^6.9.0",
    "@typescript-eslint/parser": "^6.9.0",
    "eslint": "^8.52.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-prettier": "^5.0.1",
    "husky": "^8.0.3",
    "prettier": "^3.0.3",
    "should": "^13.2.3",
    "standard-version": "^9.5.0",
    "ts-node": "^10.9.1",
    "typescript": "^4.4.3",
    "vitepress": "^1.0.0-rc.24",
    "vitest": "^0.34.6"
  },
  "dependencies": {
    "pg": "^8.11.3"
  }
}
